{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "editor",
  "version": "0.1.0",
  "identifier": "com.editor.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "editor",
        "width": 3840,
        "height": 2160
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:path:default",
            "core:event:default",
            "core:window:default",
            "core:app:default",
            "core:resources:default",
            "core:menu:default",
            "core:tray:default",
            "core:window:allow-set-title",
            "core:window:allow-set-cursor-visible"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
